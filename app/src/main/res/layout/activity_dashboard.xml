<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutBg"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/toolbar_transparent_layout"
        android:id="@+id/toolbar"/>

    <android.support.v7.widget.CardView
        android:background="@color/greyCard"
        android:layout_marginTop="-110dp"
        app:cardElevation="@dimen/margin5dp"
        android:layout_marginRight="@dimen/margin20dp"
        android:layout_marginLeft="@dimen/margin20dp"
        app:cardCornerRadius="@dimen/margin10dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeLayoutBg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/greyCard"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text24sp"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin20dp"
                android:text="Welcome to Quiz App"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>